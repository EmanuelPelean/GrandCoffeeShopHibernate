<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.gc.dto.UsersDto" table="customers" schema="coffeeshopdb">


		<id name="id">

			<column name="id" sql-type="INT(15)"></column>
		</id>

		<property name="firstname">
			<column name="firstname" sql-type="VARCHAR(30)" length="30"></column>
		</property>
		<property name="lastname">
			<column name="lastname" sql-type="VARCHAR(30)" length="30"></column>
		</property>
		<property name="email">
			<column name="email" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="userPassword">
			<column name="userPassword" sql-type="VARCHAR(30)"></column>
		</property>
		<property name="phone">
			<column name="phone" sql-type="VARCHAR(10)"></column>
		</property>
		<property name="address">
			<column name="address" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="city">
			<column name="city" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="state">
			<column name="state" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="zip">
			<column name="zip" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="music">
			<column name="music" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="gender">
			<column name="gender" sql-type="VARCHAR(50)"></column>
		</property>
		<property name="background">
			<column name="background" sql-type="VARCHAR(255)"></column>
		</property>

	</class>
</hibernate-mapping>		